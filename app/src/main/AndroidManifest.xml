        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BasicScreen"></activity>
        <activity android:name=".Ingredients"></activity>
        <activity android:name=".EditIngredients"></activity>
        <activity android:name=".AddIngredient"></activity>
        <activity android:name=".Recipes"></activity>
        <activity android:name=".EditRecipe"></activity>
        <activity android:name=".AddRecipe"></activity>
    </application>

</manifest>